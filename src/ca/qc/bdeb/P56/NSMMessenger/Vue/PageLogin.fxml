<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.effect.InnerShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>
<?import java.net.URL?>
<Pane fx:id="PanneauLogin" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
      prefHeight="445.0" prefWidth="311.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="ca.qc.bdeb.P56.NSMMessenger.Vue.FXMLControllerPageLogin">
    <stylesheets>
        <URL value="@../../Ressources/CSS/BlueTheme.css"/>
        <URL value="@../../Ressources/CSS/DarkTheme.css"/>
    </stylesheets>
    <ImageView fx:id="imgProfil" fitHeight="150.0" fitWidth="145.0" layoutX="78.0" layoutY="56.0" pickOnBounds="true"
               preserveRatio="true">
        <effect>
            <InnerShadow/>
        </effect>
        <Image url="@../../Ressources/placeHolder.png"/>
    </ImageView>
    <Pane layoutX="53.0" layoutY="199.0" prefHeight="202.0" prefWidth="195.0" styleClass="pane">
        <ComboBox fx:id="cmbUtilisateur" editable="true" layoutX="23.0" layoutY="16.0" prefHeight="25.0"
                  prefWidth="145.0" promptText="Nom d'utilisateur"/>
        <PasswordField fx:id="editMotDePasse" layoutX="23.0" layoutY="58.0" onKeyPressed="#passwordEnter"
                       prefHeight="25.0" prefWidth="145.0" promptText="Mot de Passe"/>
        <CheckBox fx:id="cbSouvenir" alignment="CENTER_RIGHT" contentDisplay="RIGHT" layoutX="23.0" layoutY="103.0"
                  lineSpacing="1.0" mnemonicParsing="false" prefHeight="17.0" prefWidth="145.0"
                  style="-fx-font-size: 10;" text="Se souvenir de moi" wrapText="true">
            <font>
                <Font size="10.0"/>
            </font>
        </CheckBox>
        <CheckBox fx:id="cbDemarrage" alignment="CENTER_RIGHT" contentDisplay="RIGHT" layoutX="23.0" layoutY="122.0"
                  lineSpacing="1.0" mnemonicParsing="false" prefHeight="17.0" prefWidth="145.0"
                  style="-fx-font-size: 10;" text="Connecter au démarrage" wrapText="true">
            <font>
                <Font size="10.0"/>
            </font>
        </CheckBox>
        <Button fx:id="btnConnecter" layoutX="23.0" layoutY="158.0" mnemonicParsing="false" onAction="#Connection"
                prefHeight="25.0" prefWidth="145.0" text="Se connecter"/>
    </Pane>
    <TextField fx:id="txtIpField" layoutX="1.0" layoutY="411.0" prefHeight="25.0" prefWidth="226.0" promptText="IP"
               text="localhost"/>
    <Button fx:id="btnTester" layoutX="230.0" layoutY="411.0" mnemonicParsing="false" onMouseClicked="#btnTesterClick"
            prefHeight="35.0" prefWidth="81.0" text="Tester"/>
    <MenuBar layoutY="-2.0" prefHeight="32.0" prefWidth="311.0">
        <Menu mnemonicParsing="false" text="NSM">
            <MenuItem mnemonicParsing="false" onAction="#creationCompteClick" text="Créer un compte"/>
        </Menu>
        <Menu mnemonicParsing="false" text="Options">
            <MenuItem mnemonicParsing="false" onAction="#playStopClick" text="Play/Stop"/>
            <Menu mnemonicParsing="false" text="Choisir un thème">
                <MenuItem mnemonicParsing="false" onAction="#changerThemeDark" text="DarkTheme"/>
                <MenuItem mnemonicParsing="false" text="BlueTheme"/>
            </Menu>
        </Menu>
    </MenuBar>
</Pane>
